<!DOCTYPE html>

<html>
<body>

<div class="card">
  <div class="card-header">
  <h3>Gigs</h3>
   </div>
     <div class="card-body">
<table class="table table-hover">
  <!--<thead class="thead-secondary"> -->
    <tr>
    <thead class="thead-light">
      <th>Artist</th>
      <th>Genre</th>
      <th>Venue</th>
      <th>Date</th>
      <th>Time</th>
      <th>Tickets</th>
      <th>Additional Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    </div>

  <tbody>
    <% @gigs.each do |gig| %>
    <% if gig.user == current_user %>
      <tr>
        <td><%= gig.artist_name %></td>
        <td><%= gig.gig_genre %></td>
        <td><%= gig.gig_venue %></td>
        <td><%= gig.gig_when.strftime("%m/%d/%Y") %></td>
        <td><%= gig.gig_when.strftime("%-I:%M %p") %></td>
        <td><%= link_to gig.gig_tickets, "http://#{gig.gig_tickets}", :target => "_blank" %></td>
        <td><%= gig.gig_comments  %></td>
        <td><%= link_to 'Show', gig, class:"btn btn-outline-success my-2 my-sm-0" %></td>
        <td><%= link_to 'Edit', edit_gig_path(gig), class:"btn btn-outline-warning my-2 my-sm-0" %></td>
        <td><%= link_to 'Destroy', gig, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger my-2 my-sm-0" %></td>
      </tr>

      <% end %>
    <% end %>
  </tbody>
</table>
<br/>
<br/>
<%= link_to 'New Gig', new_gig_path, class:"btn btn-outline-info my-2 my-sm-0" %>

    </div>
</div>
<br/>

<%= link_to 'Back', :back, class:"btn btn-outline-info my-2 my-sm-0" %>